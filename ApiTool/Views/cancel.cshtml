@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@{
    Layout = "Shared/Master.cshtml";
    ViewBag["Title"] = "Cancel call"; 
}
    @Html.Partial("Shared/_partnerDetails", Model)

    <form action="/cancel/invoke" method="POST">
    @Html.Partial("Shared/_apiSelection", Model.ApiVersion)
    <fieldset>
        <label for="restaurantId">Restaurant Id</label>
        <input type="text" id="restaurantId" name="restaurantId" value="@Model.DefaultRestaurantId">
    </fieldset>

    <fieldset>
        <label for="confirmationNumber">Confirmation number</label>
        <input type="text" name="confirmationNumber" value="">
    </fieldset>

    <fieldset>
        <label for="restaurantId">Email</label>
        <input type="text" name="email" value="api_tool_test@opentable.com">
    </fieldset>

    <div class="buttons">
        <input type="submit" class="btn btn-go" value="Get results">
        <a href="/cancel" class="start-again">Start again</a>
    </div>
</form>
    @Html.Partial("Shared/_output", Model)
    @Html.Partial("Shared/_js", "Cancel")